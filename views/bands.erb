<h1>Bands</h1>

  <form action="/bands" method="post" class="form-inline">
    <div class="input-group">
      <input type="text" name="band_name" id="band_name" class="form-control" placeholder="Name">
      <span class="input-group-btn">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>

<% if @bands == [] %>

  <p> Please add a band. </p>

<% else %>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Bands</th>
    </tr>
  </thead>
  <% @bands.each() do |band|  %>
  <tr>
    <td><a href="/band/<%= band.id()%>"><%= band.name() %></a></td>
  </tr>
  <% end %>
</table>

<% end %>
