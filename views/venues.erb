<h1>Venue Form</h1>

<h3>Add a Venue</h3>

<form action="/venues" method="post" class="form-inline">
  <div>
    <div class="input-group">
      <input type="text" name="venue_name" id="venue_name"  class="form-control" placeholder="Name">
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary">Submit</button>
      </span>
    </div>
  </div>
</form>

<% if @venues == [] %>

  <p> Please add a venue. </p>

<% else %>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Venues</th>
    </tr>
  </thead>
  <% @venues.each() do |venue|  %>
  <tr>
    <td><%= venue.name() %></td>
  </tr>
  <% end %>
</table>

<% end %>
